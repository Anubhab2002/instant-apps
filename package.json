{
  "name": "private-mono-repo",
  "license": "MIT",
  "version": "0.19.0",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "main": "dist/apps/index.js",
  "types": "dist/apps/index.d.ts",
  "scripts": {
    "start": "REACT_APP_MODE=development react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "create-app": "node ./utils/create_new_app.js",
    "publish-apps": "tsc -d --noEmit false && yarn publish",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "fs-extra": "^10.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "2.4.0",
    "prettier-plugin-organize-imports": "^2.3.3"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
